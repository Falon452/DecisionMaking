<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="What do you prefer?" />

    <LinearLayout
        android:id="@+id/scaleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintLeft_toLeftOf="@id/radioGroup"
        app:layout_constraintRight_toRightOf="@id/radioGroup">


        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="5"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="4"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="3"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="2"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="2"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="3"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="4"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"
            android:text="5"
            android:textAlignment="center"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nextQuestionButton"
        android:id="@+id/radioGroup"
        android:layout_marginBottom="40dp">


        <RadioButton
            android:id="@+id/scaleLeft5"
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/scaleLeft4"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/RadioButtonWidth" />

        <RadioButton
            android:id="@+id/scaleLeft3"
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/scaleLeft2"
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/scaleLeft1"
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/scale0"
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/scaleRight1"
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/scaleRight2"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/RadioButtonWidth" />

        <RadioButton
            android:id="@+id/scaleRight3"
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/scaleRight4"
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/scaleRight5"
            android:layout_width="@dimen/RadioButtonWidth"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:id="@+id/nextQuestionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next question"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>